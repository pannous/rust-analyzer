<idea-plugin>
    <extensions defaultExtensionNs="com.redhat.devtools.lsp4ij">
        <server id="customRustAnalyzer"
                name="Custom Rust Analyzer"
                factoryClass="com.customra.CustomRustAnalyzerServerFactory">
            <description><![CDATA[
                Custom rust-analyzer with extended syntax support:
                semicolon inference, ** power operator, Unicode operators,
                'not' prefix, and/or/xor aliases.
            ]]></description>
        </server>

        <languageMapping language="Rustx"
                         serverId="customRustAnalyzer"
                         languageId="rust"/>

        <!-- File pattern mappings for custom extensions -->
        <fileNamePatternMapping pattern="*.rx"
                                serverId="customRustAnalyzer"
                                languageId="rust"/>
        <fileNamePatternMapping pattern="*.roo"
                                serverId="customRustAnalyzer"
                                languageId="rust"/>
        <fileNamePatternMapping pattern="*.ðŸ¦€"
                                serverId="customRustAnalyzer"
                                languageId="rust"/>
        <fileNamePatternMapping pattern="*.ðŸ“"
                                serverId="customRustAnalyzer"
                                languageId="rust"/>
        <fileNamePatternMapping pattern="*.ðŸ¦˜"
                                serverId="customRustAnalyzer"
                                languageId="rust"/>
    </extensions>
</idea-plugin>
